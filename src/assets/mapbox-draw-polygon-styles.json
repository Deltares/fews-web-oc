[
  {
    "id": "gl-draw-polygon-fill-inactive",
    "type": "fill",
    "filter": [
      "all",
      ["==", "active", "false"],
      ["==", "$type", "Polygon"],
      ["!=", "mode", "static"]
    ],
    "paint": {
      "fill-color": "#c2bebe",
      "fill-outline-color": "#626262",
      "fill-opacity": 0.5
    }
  },
  {
    "id": "gl-draw-polygon-fill-active",
    "type": "fill",
    "filter": ["all", ["==", "active", "true"], ["==", "$type", "Polygon"]],
    "paint": {
      "fill-color": "#c2bebe",
      "fill-outline-color": "#626262",
      "fill-opacity": 0.4
    }
  },
  {
    "id": "gl-draw-polygon-stroke-inactive",
    "type": "line",
    "filter": [
      "all",
      ["==", "active", "false"],
      ["==", "$type", "Polygon"],
      ["!=", "mode", "static"]
    ],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "#000000",
      "line-width": 2
    }
  },
  {
    "id": "gl-draw-polygon-stroke-active",
    "type": "line",
    "filter": ["all", ["==", "active", "true"], ["==", "$type", "Polygon"]],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "#000000",
      "line-dasharray": [0.2, 2],
      "line-width": 2
    }
  }
]
